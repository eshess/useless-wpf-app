<Window x:Class="RidiculouslyComplexAnniversaryCalculator.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        Style="{StaticResource WarningWindow}"
        Title="Warning" Height="425.881" Width="765.85"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <StackPanel HorizontalAlignment="Center">
        <Label 
            HorizontalAlignment="Center"
            Margin="0,30,0,0">
            <Label.Content>
                <AccessText Name="WarningMessage" TextWrapping="Wrap" TextAlignment="Center"/>
            </Label.Content>
        </Label>
        <StackPanel Orientation="Horizontal" Margin="30" HorizontalAlignment="Center">
            <Label Content="Are you sure?" Margin="0,0,30,0"/>
            <Button 
                HorizontalAlignment="Center"
                Content="Yes"
                IsDefault="True"
                Margin="0,5,30,5"
                Width="150"
                Click="Yes_Click"/>
            <Button 
                Margin="0,5,0,5"
                Content="No"
                Width="150"
                Click="No_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
